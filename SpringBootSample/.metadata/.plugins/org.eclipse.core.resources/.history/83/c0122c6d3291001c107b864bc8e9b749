<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapperとxmlのマッピング -->
<mapper namespace="com.example.repository.UserMapper">

	<!-- マッピング定義（ユーザー） -->
	<resultMap type="com.example.domain.user.model.MUser" id="user">
		<id column="user_id" property="userId"/>
		<result column="password" property="password"/>
		<result column="user_name" property="userName"/>
		<result column="birthday" property="birthday"/>
		<result column="age" property="age"/>
		<result column="gender" property="gender"/>
		<result column="department_id" property="departmentId"/>
		<result column="role" property="role"/>
		<association property="department" resultMap="department"/>
		<collection property="salaryList" resultMap="salary" columnPrefix="salary_"/>
	</resultMap>

	<!-- マッピング定義（部署） -->
	<resultMap type="com.example.domain.user.model.Department" id="department">
		<id column="departnemt_id" property="departmentId"/>
		<result column="department_name" property="departmentName"/>
	</resultMap>

	<!-- マッピング定義（給料） -->
	<resultMap type="com.example.domain.user.model.Department" id="department">
		<id column="user_id" property="userId"/>
		<id column="year_month" property="yearMonth"/>
		<result column="salary" property="salary"/>
	</resultMap>

	<!-- ユーザー１件登録 -->
	<insert id="insertOne">
		insert into m_user(
			user_id
			,password
			,user_name
			,birthday
			,age
			,gender
			,department_id
			,role
		)
		values(
			#{userId}
			,#{password}
			,#{userName}
			,#{birthday}
			,#{age}
			,#{gender}
			,#{departmentId}
			,#{role}
		)
	</insert>

	<!-- ユーザー複数件取得 -->
	<select id="findMany" resultType="MUser">
		select
			user_id
			,password
			,user_name
			,birthday
			,age
			,gender
			,department_id
			,role
			<!--
			 *
			 -->
		from
			 m_user
		<where>
			<if test="userId!=null">
			user_id like '%' || #{userId} || '%'
			</if>
			<if test="userName!=null">
			and user_name like '%' || #{userName} || '%'
			</if>
		</where>
	</select>

	<!-- ユーザー１件検索 -->
	<select id="findOne" resultMap="user">
		select
			usr.user_id
			,usr.password
			,usr.user_name
			,usr.birthday
			,usr.age
			,usr.gender
			,usr.role
			,usr.department_id
			,dpt.department_name
			,sly.user_id as salary_user_id
			,sly.year_month as salary_year_month
			,sly.salary as salary_salary
			<!--
			*
			 -->
		from
			 m_user usr
			 left join m_department dpt
			 	on usr.department_id=dpt.department_id
			 left join t_salary sly
			 	on usr.user_id=sly.user_id
		where
			usr.user_id=#{userId};
	</select>

	<!-- ユーザー１件更新 -->
	<update id="updateOne">
		update
			 m_user
		set
			password=#{password}
			,user_name=#{userName}
		where
			user_id=#{userId}
	</update>

	<!-- ユーザー１件削除 -->
	<delete id="deleteOne">
		delete
			 m_user
		where
			user_id=#{userId}
	</delete>
</mapper>